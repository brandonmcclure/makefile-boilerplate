{
	"Boilerplate": {
		"prefix": "!make_docker-compose",
		"body": [
			"# kernel-style V=1 build verbosity",
			"ifeq ('$(origin V)', 'command line')",
			"\tBUILD_VERBOSE = $(V)",
			"endif",
			"ifeq ($(BUILD_VERBOSE),1)",
			"\tQ =",
			"else",
			"\tQ = @",
			"endif\n",
			"ifeq ($(OS),Windows_NT)",
			"\tSHELL := pwsh.exe",
			"else",
			"\tSHELL := pwsh",
			"endif\n",
			".SHELLFLAGS := -NoProfile -Command "
		],
		"description": "Create an boilerplate docker-compose Makefile"
	}
}